<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:layout_margin="5pt" android:padding="5pt"
        android:background="#79504949">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:gravity="right"
            android:textSize="54sp" android:paddingTop="20pt" android:background="#534F4F"
            android:textColor="#F5F2F2"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="AC"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/buac" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="+/-"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/buplusminus" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="%"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/bupercent" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/budiv" android:layout_weight="1"
                android:textSize="26sp" android:background="#EE8626" android:onClick="numberPressed"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/bu7" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/bu8" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/bu9" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/bumul" android:layout_weight="1"
                android:textSize="26sp" android:background="#EE8626" android:onClick="numberPressed"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/bu4" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/bu5" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/bu6" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/buabs" android:layout_weight="1"
                android:textSize="26sp" android:background="#EE8626" android:onClick="numberPressed"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/bu1" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/bu2" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/bu3" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/buadd" android:layout_weight="1"
                android:textSize="26sp" android:background="#EE8626" android:onClick="numberPressed"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="0"
                android:layout_width="77pt"
                android:layout_height="35pt" android:id="@+id/bu0" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="."
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/budot" android:layout_weight="1"
                android:textSize="26sp" android:background="#A2A2A2" android:onClick="numberPressed"/>
        <Button
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="35pt" android:id="@+id/buequal" android:layout_weight="1"
                android:textSize="26sp" android:background="#EE8626" android:onClick="sum"/>
    </LinearLayout>
</LinearLayout>